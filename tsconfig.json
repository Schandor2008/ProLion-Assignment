{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",  
    "rootDirs": ["./src", "./test"],  
    "outDir": "./dist",  
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true,     
    "skipLibCheck": true, 
    "noEmitOnError": true
  }, 
  "include": ["./src", "./test"]
}
